{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": false,
		"strict": true,
		"target": "ES6",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"baseUrl": "./",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"test"
	]
}